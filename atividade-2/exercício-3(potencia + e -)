#include <stdio.h>

double calcularPotencia(double base, int expoente) {
    if (expoente == 0)
        return 1;
    if (expoente > 0) {
        double resultado = 1.0;
        for (int i = 0; i < expoente; i++) {
            resultado *= base;
        }
        return resultado;
    } else {
        double resultado = 1.0;
        for (int i = 0; i > expoente; i--) {
            resultado /= base;
        }
        return resultado;
    }
}

int main() {
    double base;
    int expoente;
    
    printf("Digite a base: ");
    scanf("%lf", &base);
    
    printf("Digite o expoente: ");
    scanf("%d", &expoente);
    
    double resultado = calcularPotencia(base, expoente);
    
    printf("%.2lf elevado a %d Ã© igual a %.2lf\n", base, expoente, resultado);
    
    return 0;
}
